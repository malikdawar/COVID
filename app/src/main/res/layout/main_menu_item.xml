<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuItemCard"
    android:layout_width="175dp"
    android:layout_height="210dp"
    android:layout_marginStart="@dimen/activity_half"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="@dimen/activity_half">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/menuImgView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:tint="@color/white"
            tools:src="@drawable/ic_menu" />

        <TextView
            android:id="@+id/menuTvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_half"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/menuTvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="7"
            android:textColor="@color/white"
            android:textSize="12dp"
            tools:text="@string/covid" />

    </LinearLayout>
</androidx.cardview.widget.CardView>